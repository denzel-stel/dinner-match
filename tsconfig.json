{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "NodeNext",       // Use modern Node.js module resolution
        "moduleResolution": "NodeNext",
        "target": "ES2020",         // Modern JavaScript features
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true, // Often needed alongside experimentalDecorators for DI frameworks
        "paths": {

            "#database/*": ["./database/*",],

            "#services/*": ["./services/*",],

            "#api/*":[ "./api/*",],

            "#app/*":[ "./app/*"]

        } ,
      },
    "include": ["./**/*.ts", "**/*.tsx", "api/services/AuthenticationSessionService.ts"],
    "exclude": ["node_modules",]
}